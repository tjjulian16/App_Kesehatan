<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/card_view_keluarga"

    android:layout_height="wrap_content"
    android:layout_width="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="25dp"
    app:cardElevation="6dp"
    app:cardCornerRadius="15dp"
    app:cardBackgroundColor="#d6f5d6"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/fam"
                android:layout_marginLeft="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/nama_keluarga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:hint="Nama Keluarganya"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/judul_alamat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="Alamat: "/>

                    <TextView
                        android:id="@+id/alamat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:layout_marginStart="50dp"
                        android:layout_alignParentStart="true"
                        android:textSize="12sp"
                        android:hint="Perumahan Griya Rumah"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="Status: "/>

                    <TextView
                        android:id="@+id/isi_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:layout_marginStart="50dp"
                        android:layout_alignParentStart="true"
                        android:textSize="12sp"
                        android:hint="Sehat"/>
                </RelativeLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/btnLihat"
                        android:layout_width="65dp"
                        android:layout_height="50dp"
                        android:backgroundTint="#4287f5"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/putih"
                        android:textSize="10sp"
                        android:text="Lihat">

                    </Button>

                    <Button
                        android:id="@+id/btnEdit"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/edit"
                        android:drawableLeft="@drawable/ic_edit"
                        android:fontFamily="sans-serif"
                        android:text="Edit"
                        android:textColor="@color/putih"
                        android:textSize="10sp" />

                    <Button
                        android:id="@+id/btnHapus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/hapus"
                        android:drawableLeft="@drawable/ic_delete"
                        android:fontFamily="sans-serif"
                        android:text="Hapus"
                        android:textColor="@color/putih"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>

