<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/bg">

        <RelativeLayout
            android:id="@+id/overviewContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#9fdf9f"
            android:layout_marginTop="0dp">
            <ImageView
                android:id="@+id/logo"
                android:src="@drawable/baktihusada"
                android:layout_height="120dp"
                android:layout_width="90dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/sisinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-medium"
                android:text="Sistem Informasi"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/pencatatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="50dp"
                android:fontFamily="sans-serif-medium"
                android:text="Pencatatan Kesehatan"
                android:textSize="23dp" />
            <TextView
                android:id="@+id/dinkes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="80dp"
                android:fontFamily="sans-serif-medium"
                android:text="Dinas Kesehatan Kota Malang"
                android:textSize="15dp" />

        </RelativeLayout>

    <LinearLayout
        android:id="@+id/menuutama"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:orientation="vertical"
        android:layout_marginTop="130dp">

        <TextView
            android:id="@+id/dinkes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft=""
            android:layout_marginTop="80dp"
            android:fontFamily="sans-serif-medium"
            android:text="Dinas Kesehatan Kota Malang"
            android:textSize="15dp" />

    </LinearLayout>

</RelativeLayout>