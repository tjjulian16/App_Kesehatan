<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:tag="cards main container">

<androidx.cardview.widget.CardView
    android:id="@+id/card_view_kelurahan"
    android:layout_width="265dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    card_view:contentPadding="15dp"
    android:layout_marginTop="25dp"
    android:layout_marginBottom="25dp"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="8dp"
    android:clickable="true"
    card_view:strokeWidth="10dp"
    card_view:strokeColor="@color/hitam"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@drawable/shapecardview"
    android:focusable="true"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/templateKelurahan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:hint="@string/template_kelurahan_x"
        android:textAlignment="center"
        android:textSize="20sp" />

</RelativeLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>