<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/bg">

        <RelativeLayout
            android:id="@+id/overviewContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#9fdf9f"
            android:layout_marginTop="0dp">
            <ImageView

                android:src="@drawable/baktihusada"
                android:layout_height="120dp"
                android:layout_width="90dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#fff"
                android:text="Sistem Informasi"
                android:textSize="23dp" />


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="50dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#fff"
                android:text="Pencatatan Kesehatan"
                android:textSize="23dp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="80dp"
                android:fontFamily="sans-serif-medium"
                android:text="Dinas Kesehatan Kota Malang"
                android:textColor="#fff"
                android:textSize="15dp" />

        </RelativeLayout>

    <LinearLayout
        android:id="@+id/batas"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="vertical"
        android:background="#339933"
        android:layout_marginTop="0dp">
    </LinearLayout>
<LinearLayout
    android:id="@+id/menuutama"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="0dp">

    <TextView
        android:id="@+id/menujudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif-medium"
        android:text="MENU UTAMA"
        android:textColor="#fff"
        android:textSize="30dp"/>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@drawable/buttonmenu"
        android:layout_marginTop="50dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/masukdatatxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginStart="48dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="48dp"
            android:fontFamily="sans-serif-medium"
            android:text="Masukkan Data"
            android:textColor="#fff"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/masukdataimg"
            android:src="@drawable/document"
            android:layout_height="60dp"
            android:layout_width="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="75dp"/>
</RelativeLayout>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@drawable/buttonmenu"
        android:layout_marginTop="90dp"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/lihatdatatxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="65dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="67dp"
            android:fontFamily="sans-serif-medium"
            android:text="Lihat Data"
            android:textColor="#fff"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/lihatdataimg"
            android:src="@drawable/searchicon"
            android:layout_height="60dp"
            android:layout_width="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp"/>
        </RelativeLayout>
</LinearLayout>



</LinearLayout>

